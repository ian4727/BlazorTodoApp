@page "/"
@using BlazorTodoApp.Components.TodoApp

@rendermode InteractiveServer

<PageTitle>Blazor Todo App</PageTitle>

<h1>todos</h1>

<AddTodo OnAdd="@AddTodoItem" />

<ul>
    @foreach (var todo in todos)
    {
        <li>
            <input type="checkbox" @bind="todo.IsDone" />
            <input @bind="todo.Title" />
        </li>
    }
</ul>

<footer>
    <div class="info">
        <div>@todos.Count(todo => !todo.IsDone) item left!</div>
        <div class="status">
            <div>All</div>
            <div>Active</div>
            <div>Completed</div>
        </div>
        <div class="clear">Clear completed</div>
    </div>
</footer>

@code {
    private List<TodoItem> todos = new();

    async Task AddTodoItem(string newTodoTitle)
    {
        if (!string.IsNullOrWhiteSpace(newTodoTitle))
        {
            todos.Add(new TodoItem { Title = newTodoTitle });
        }
    }
}